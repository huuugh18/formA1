html
    head
        meta(charset='utf-8')
        meta(name="viewport",content="width=device-width, initial-scale=1")
        link(rel='stylesheet',href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css')
        link(rel='stylesheet',href='#')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js')
    body
        .jumbotron
            .container
                .row
                    .col-md-6.col-md-offset-3
                        center
                            h1 Edit Program
                            h4 Program: 
                                i #{name} 
                            h4 ID: 
                                i #{id}
        
        form.container(action='/updateProgram/#{id}',method='post')
            .row.col-xs-8.col-xs-offset-2
                .row
                    .form-group     
                        label
                            h4
                                strong Program Name:
                        input.form-control(type='text',name='programName',value='#{name}',placeholder='Change Name')
                .row                    
                    .form-group     
                        label
                            h4
                                strong Program ID:
                        input.form-control(type='text',name='programID',value='#{id}',placeholder='Change ID')
                .row 
                    .form-group     
                        input.form-control.btn.btn-primary(type='submit',value='Submit Changes')
                    a.form-control.btn.btn-success(href='/programs',type='button',value='Return to Programs') Return to Programs
                