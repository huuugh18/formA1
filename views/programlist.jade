html
    head
        meta(charset='utf-8')
        meta(name="viewport",content="width=device-width, initial-scale=1")
        link(rel='stylesheet',href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css')
        link(rel='stylesheet',href='#')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js')
    body
        .jumbotron
            .container
                .row
                    .col-md-4.col-md-offset-4
                        center
                            h1 Fit4Me Program Database
        .container.row.col-md-6.col-md-offset-3
            form.row(action='/searchProgramName', method='post')
                .col-md-6
                    input#searchProgName.form-control(type='text',placeholder='Search Programs by Name',name='searchProgName')
                .col-md-6
                    input#searchProgNameInput.form-control.btn.btn-primary(type='submit',value='Search')
            form.row(action='/searchProgramID', method='post')
                .col-md-6
                    input#searchProgID.form-control(type='text',placeholder='Search Programs by ID',name='searchProgID')
                .col-md-6
                    input#searchProgIDInput.form-control.btn.btn-primary(type='submit',value='Search')
            .row
                .h4#progSearchFailed
            br
            a#addProgram.btn.btn-success.btn-block(href='/programs/new',role='button') Add Program
            br
        .container.row.col-md-6.col-md-offset-3
            each program in programs
                h5 Name: 
                    strong #{program.name}
                h5 ID: 
                    strong #{program.id}
                div.btn-group 
                    a.btn.btn-info(href='/programs/#{program.id}') Edit
                    a.btn.btn-danger(href='/removeProgram/#{program.id}') Remove
                hr
                
            